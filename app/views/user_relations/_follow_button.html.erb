<% if logged_in? && current_user != user %>
  <% if current_user.following?(user) %>
    <%= form_tag(user_relation_path(user.id), method: :delete) do %>
      <%= hidden_field_tag :user_id, user.id %>
      <%= hidden_field_tag :relation, 'follow' %>
      <%= button_tag type: 'submit', class: 'btn btn-xs btn-primary btn-group-justified' do %>
        フォロー中
      <% end %>
    <% end %>
  <% else %>
    <%= form_tag(user_relations_path) do %>
      <%= hidden_field_tag :user_id, user.id %>
      <%= hidden_field_tag :relation, 'follow' %>
      <%= button_tag type: 'submit', class: 'btn btn-xs btn-default btn-group-justified' do %>
        フォロー
      <% end %>
    <% end %>
  <% end %>
<% end %> 
