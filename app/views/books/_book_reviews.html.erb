<div class="row">
	<div class="col-md-10 col-md-offset-1 col-xs-12">
		<!-- タブ・メニュー -->
		<ul class="nav nav-tabs">
			<li class="<%= "active" if tab == "short" %>"><a href="#short" data-toggle="tab">10文字レビュー</a></li>
			<li class="<%= "active" if tab == "long" %>"><a href="#long" data-toggle="tab">書評</a></li>
		</ul>

		<!-- タブ内容 -->
		<div class="tab-content">
			<div class="tab-pane <%= "active" if tab == "short" %>" id="short">
				<%= render 'short_review', short_reviews: short_reviews %>
	      <%= paginate short_reviews %>
			</div>
			<div class="tab-pane <%= "active" if tab == "long" %>" id="long">
				<%= render 'long_review', long_reviews: long_reviews %>
	      <%= paginate long_reviews %>
			</div>
		</div>
	</div>
</div>