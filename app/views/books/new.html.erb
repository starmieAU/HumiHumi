<div class="search">
  <div class="row">
    <div class = "col-xs-12">
      <div class="text-center">
        <%= form_tag(new_book_path, method: :get, class: 'form-inline') do %>
          <div class="form-group">
            <%= text_field_tag :keyword, @keyword, class: 'form-control', placeholder: "キーワードを入力", size: 40 %>
          </div>
          <%= submit_tag '書籍を検索', class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class = "col-md-8 col-md-offset-1 col-xs-12 new-books">
    <%= render 'books', books: @books %>
  </div>
</div>