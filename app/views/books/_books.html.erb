
<% if books.present? %>
  <div class="row">
    <div class="col-xs-12">
      <h3>検索結果</h3>
    </div>
  </div>
  <% books.each do |book| %>
    <%= render 'list_book', book: book %>
  <% end %>
  <div class="row">
    <div class="col-xs-12">
      <%= paginate @books %>
    </div>
  </div>
<% end %>
