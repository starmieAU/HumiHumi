<div class="search">
  <div class="row">
    <div class="visible-xs col-xs-12">
      <div class="text-center">
        <%= form_tag(new_book_path, method: :get, class: 'form-inline') do %>
          <div class="form-group">
            <%= text_field_tag :keyword, @keyword, class: 'form-control input-lg', placeholder: "キーワードを入力", size: 40 %>
          </div>
          <%= submit_tag '書籍を検索', class: 'btn btn-success btn-lg' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render 'reviews/microposts', microposts: @microposts %>