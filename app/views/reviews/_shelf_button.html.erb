<% if logged_in? %>
  <% if current_user.shelf?(book) %>
    <%= form_tag(review_path(book.id), method: :delete) do %>
      <%= hidden_field_tag :book_id, book.id %>
      <%= hidden_field_tag :relation, 'shelf' %>
      <%= button_tag type: 'submit', class: 'btn btn-sm btn-info btn-group-justified' do %>
        本棚<span class="glyphicon glyphicon-minus-sign"></span>
      <% end %>
    <% end %>
  <% else %>
    <%= form_tag(reviews_path) do %>
      <%= hidden_field_tag :isbn_13, book.isbn_13 %>
      <%= hidden_field_tag :relation, 'shelf' %>
      <%= button_tag type: 'submit', class: 'btn btn-sm btn-primary btn-group-justified' do %>
        本棚<span class="glyphicon glyphicon-plus-sign"></span>
      <% end %>
    <% end %>
  <% end %>
<% end %>  